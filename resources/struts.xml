<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
	"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<constant name="struts.action.extension" value="action" />
	<constant name="struts.devMode" value="true" />
	<constant name="struts.ui.theme" value="xhtml" />
	<!-- (1024*1024*500) 500M -->
	<constant name="struts.multipart.maxSize" value="524288000" />
	<!--<include file="struts-stream.xml"></include>-->

	<package name="demo-default" extends="struts-default, json-default">
		<interceptors>
			<interceptor name="systemInterceptor" class="systemInterceptor"></interceptor>
			<interceptor-stack name="loginStack">
				<!-- 暂不启动拦截器 -->
				<interceptor-ref name="systemInterceptor"></interceptor-ref>
				<interceptor-ref name="defaultStack"></interceptor-ref>
			</interceptor-stack>
		</interceptors>

		<default-interceptor-ref name="loginStack"></default-interceptor-ref>
		<action name="*_*" class="{1}" method="{2}">
			<result name="jsp">${page}</result>
			<result name="url" type="redirect">${url}</result>
			<result name="json" type="json">
				<param name="contentType">application/json</param>
				<param name="root">dataMap</param>
				<param name="excludeNullProperties">true</param>
			</result>
			<result name="404">pages/404.jsp</result>
			<result name="500">pages/500.jsp</result>
		</action>

	</package>
</struts>

		